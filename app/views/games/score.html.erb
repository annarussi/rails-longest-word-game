<div class="new">
  <div class="letters d-flex flex-column justify-content-center align-items-center">
    <h1>Result</h1>

    <% if @is_grid %>
      <% if @is_english%>
      <p><strong>Congratulations! </strong><%= @attempt %> is a valid English word!</p>
      <% else %>
      <p>Sorry but <strong><%= @attempt %></strong> does not seem to be a valid English word...</p>
      <% end %>
    <% else %>
    <p>Sorry but <strong><%= @attempt %></strong> can't be built out of <%= @letters.join(' ') %></p>
    <% end %>


    <%= link_to "Play again", new_path, class: "btn btn-dark" %>
  </div>
</div>
